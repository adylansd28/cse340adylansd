<%- include("../partials/header.ejs") %>

<main id="login-view" class="narrow">
  <h1><%= title %></h1>

  <!-- Flash messages -->
  <%- messages() %>

  <!-- Login form -->
  <form id="loginForm" action="/account/login" method="post" novalidate>
    <div class="field">
      <label for="account_email">Email</label>
      <input type="email" id="account_email" name="account_email" required>
    </div>

    <div class="field">
      <label for="account_password">Password</label>
      <input type="password" id="account_password" name="account_password" required>
    </div>

    <button type="submit" class="btn">Login</button>
  </form>

  <p class="muted">
    Donâ€™t have an account?
    <a href="/account/register" aria-label="Go to registration">Register here</a>
  </p>
</main>

