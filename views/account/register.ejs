<%- include("../partials/header.ejs") %>

<main id="register-view" class="narrow">
  <h1><%= title %></h1>

  <!-- Flash messages -->
  <%- messages() %>

  <!-- Registration form -->
  <form id="registerForm" action="/account/register" method="post" novalidate>
    <div class="field">
      <label for="account_firstname">First Name</label>
      <input type="text" id="account_firstname" name="account_firstname" required>
    </div>

    <div class="field">
      <label for="account_lastname">Last Name</label>
      <input type="text" id="account_lastname" name="account_lastname" required>
    </div>

    <div class="field">
      <label for="account_email">Email</label>
      <input type="email" id="account_email" name="account_email" required>
    </div>

    <div class="field">
      <label for="account_password">Password</label>
      <input type="password" id="account_password" name="account_password" required>
      <small>Password must be at least 12 characters, include 1 capital letter, 1 number, and 1 special character.</small>
    </div>

    <button type="submit" class="btn">Register</button>
  </form>
</main>

<%- include("../partials/footer.ejs") %>
